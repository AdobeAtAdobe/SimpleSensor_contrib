<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            cq:template="/libs/screens/core/templates/display"
            jcr:description="entrance"
            jcr:primaryType="cq:PageContent"
            jcr:title="SimpleSensor Test Display"
            sling:resourceType="screens/core/components/display"
            height="0"
            layoutNumCols="{Long}1"
            layoutNumRows="{Long}1"
            resolution="1920x1080"
            width="0">
        <channels
            jcr:primaryType="nt:unstructured"
            idleText="Touch anywhere to begin"
            idleTimeout="{Long}300"
            idleTitle="Idle Experience">
            <default
                jcr:primaryType="nt:unstructured"
                events="[load]"
                path="/content/screens/simplesensor/channels/simplesensortest"
                role="default"
                showTooltip="false"/>
        </channels>
    </jcr:content>
    <experience-player/>
</jcr:root>
